# ============================================================================
# JengaTrack Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string (for Drizzle ORM)
DATABASE_URL=postgresql://user:password@host:5432/database

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# Session & Authentication
# ============================================================================
# Session secret for express-session (generate with: openssl rand -base64 32)
SESSION_SECRET=your-random-32-character-secret-string-minimum-32-chars

# JWT secret for token-based authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-for-token-authentication-minimum-32-chars

# ============================================================================
# Twilio WhatsApp Integration
# ============================================================================
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_NUMBER=+14155238886

# ============================================================================
# Application Configuration
# ============================================================================
# Frontend URL (for WhatsApp links and redirects)
DASHBOARD_URL=https://build-monitor-lac.vercel.app

# Environment (development, production, test)
NODE_ENV=development

# ============================================================================
# Optional: AI Features
# ============================================================================
# OpenAI API key for AI-powered intent parsing in WhatsApp messages
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ============================================================================
# Optional: Cookie & Session Configuration
# ============================================================================
# Cookie domain (leave empty for auto-detection)
COOKIE_DOMAIN=

# Session cookie name (default: buildmonitor.sid)
SESSION_COOKIE_NAME=buildmonitor.sid

# ============================================================================
# Optional: Logging & Debugging
# ============================================================================
# Enable verbose logging (true/false)
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================================================
# Vercel Deployment
# ============================================================================
# These are automatically set by Vercel, but you can override:
# PORT=3000
# VERCEL=1
# VERCEL_ENV=production

# ============================================================================
# Notes
# ============================================================================
# 1. Generate SESSION_SECRET: openssl rand -base64 32
# 2. Generate JWT_SECRET: openssl rand -base64 32
# 3. Get Twilio credentials from: https://console.twilio.com/
# 4. Get Supabase credentials from: https://app.supabase.com/project/_/settings/api
# 5. Never commit .env file to git (it's in .gitignore)
# 6. Set these in Vercel: Settings â†’ Environment Variables
